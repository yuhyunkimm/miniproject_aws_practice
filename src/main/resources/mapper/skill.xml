    <delete id="deleteByJobsId">
        delete from required_skill_tb where jobs_id = #{jobsId} 
    </delete>

    <delete id="deleteByResumeId">
        delete from RESUME_SKILL_tb where resume_id = #{resumeId}
    </delete>
</mapper>