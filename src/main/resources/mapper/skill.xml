<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.project.model.SkillRepository">
    <!-- <select id="findAll" resultType="shop.mtcoding.project.model.Skill">
